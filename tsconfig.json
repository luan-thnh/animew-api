{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "plugins": [
    {
      "name": "tsconfig-paths",
      "after": true
    }
  ]
}
